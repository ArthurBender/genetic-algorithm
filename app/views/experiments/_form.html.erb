<%= form_with(model: experiment, local: true) do |form| %>
  <% if experiment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(experiment.errors.count, "error") %> prohibited this experiment from being saved:</h2>

      <ul>
      <% experiment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :word, class: "col-4" %>
    <div class="col-8">
      <%= form.text_field :word, class: "form-control" %>
      <small class="form-text text-muted">Recommended: 20 characters</small>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :population, class: "col-4" %>
    <div class="col-8">
      <%= form.number_field :population, class: "form-control" %>
      <small class="form-text text-muted">Recommended: 1000</small>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :mutation, class: "col-4" %>
    <div class="col-8">
      <%= form.number_field :mutation, step: :any, class: "form-control" %>
      <small class="form-text text-muted">Recommended: 0.01</small>
    </div>
  </div>
<% end %>
<br>